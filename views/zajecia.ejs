<%- include("komponenty/header") -%>
    </head>

    <%- include("komponenty/nawigacja") -%>

        <div class="mojProfil" style="padding-right: 10%; padding-bottom: 0%;">
            <div class="profil">
                <ul class="nav nav-pills mb-2" id="pills-tab" role="tablist">

                    <li class="nav-item">
                        <a class="nav-link active" id="pills-Tzajecia-tab" data-toggle="pill" href="#pills-Tzajecia"
                            role="tab" aria-controls="pills-Tzajecia" aria-selected="true">
                            Upcoming classes 
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" id="pills-Pzajecia-tab" data-toggle="pill" href="#pills-Pzajecia" role="tab"
                            aria-controls="pills-Pzajecia" aria-selected="false">
                            Archival classes
                        </a>
                    </li>

                </ul>
            </div>
        </div>


        <div class="tab-content">
            <div class="tab-pane fade show active" id="pills-Tzajecia" role="tabpanel"
                aria-labelledby="pills-Tzajecia-tab">

                <div class="container-fluid" style="padding: 3% 6%; background-color:#2496ed;">
                    <h3 style="font-weight: bold; color:white;">Upcoming classes</h3>
                    <form class="" action="/wideokonferencja" method="POST">

                        <% przyszle.forEach(przyszle=> { %>
                            <div class="list-group-item obramowanie"
                                style="padding:0% 10%;padding-bottom: 2%; padding-top: 2%;">
                                <div class="row">
                                    <div class="col-3">
                                        <h5 style="font-weight: bold;">Teacher</h5>
                                        <h6>
                                            <%=przyszle.imie%>
                                                <%=przyszle.nazwisko%>
                                        </h6>
                                    </div>
                                    <div class="list-group col-3">
                                        <h5 style="font-weight: bold;">Date</h5>
                                        <h6>
                                            <%=przyszle.data_zajec%>
                                        </h6>
                                    </div>
                                    <div class="list-group col-3">
                                        <h5 style="font-weight: bold;">Duration</h5>
                                        <h6>
                                            <%=przyszle.czas_zajec%>
                                        </h6>
                                    </div>
                                    <div class="list-group col-3">
                                        <button class="btn btn-primary przyciski" type="submit" name="idPrzeciwnejOsoby"
                                            value="<%=przyszle.uzytkownik_iduzytkownik%>">Dołącz do
                                            wideokonferencji</button>
                                    </div>
                                </div>
                            </div>

                            <% }); %>
                    </form>
                </div>

            </div>

            <div class="tab-pane fade" id="pills-Pzajecia" role="tabpanel" aria-labelledby="pills-Pzajecia-tab">

                <div class="container-fluid" style="padding: 3% 6%; background-color:#2496ed;">
                    <h3 style="font-weight: bold; color:white;">Archival classes</h3>
                    <% archiwalne.forEach(archiwalne=> { %>
                        <div class="list-group-item obramowanie"
                            style="padding:0% 10%;padding-bottom: 2%; padding-top: 2%;">
                            <div class="row">
                                <div class="col-5">
                                    <h5 style="font-weight: bold;">Teacher</h5>
                                    <h6>
                                        <%= archiwalne.imie%>
                                            <%=archiwalne.nazwisko%>
                                    </h6>
                                </div>
                                <div class="list-group col-4">
                                    <h5 style="font-weight: bold;">Date</h5>
                                    <h6>
                                        <%=archiwalne.data_zajec%>
                                    </h6>
                                </div>
                                <div class="list-group col-3">
                                    <h5 style="font-weight: bold;">Duration</h5>
                                    <h6>
                                        <%=archiwalne.czas_zajec%>
                                    </h6>
                                </div>
                            </div>

                        </div>
                        <% }); %>
                </div>

            </div>

        </div>

        <%- include("komponenty/footer") -%>